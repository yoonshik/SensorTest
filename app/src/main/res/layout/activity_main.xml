<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.yoonshikhong.sensortest.MainActivity">

    <TextView
        android:id="@+id/accelerometer_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Accelerometer"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="38dp" />
<!--
    <TextView
        android:id="@+id/gyroscope_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gyroscope"
        android:layout_above="@+id/accelerometer_data"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="81dp" />
-->
    <TextView
        android:id="@+id/response_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Response"
        android:layout_marginTop="51dp"
        android:layout_below="@+id/accelerometer_data"
        android:layout_alignLeft="@+id/accelerometer_data"
        android:layout_alignStart="@+id/accelerometer_data" />

    <TextView
        android:id="@+id/poll_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Poll"
        android:textSize="40dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upload picture"
        android:id="@+id/btnCapture"
        android:layout_below="@+id/poll_data"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="71dp" />

    <MediaController
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mediaController"
        android:layout_alignBottom="@+id/response_data"
        android:layout_toLeftOf="@+id/btnCapture"
        android:layout_toStartOf="@+id/btnCapture"
        android:layout_marginRight="73dp"
        android:layout_marginEnd="73dp" />

</RelativeLayout>
